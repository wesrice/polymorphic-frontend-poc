{
  "compilerOptions": {
    "allowUnreachableCode": true,
    "baseUrl": ".",
    "allowJs": false,
    "declaration": true,
    "lib": ["dom", "es2015", "es2016", "es2017"],
    "module": "commonjs",
    "outDir": "dist",
    "pretty": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": false,
    "strict": true,
    "target": "es6"
  },
  "compileOnSave": false,
  "include": [
    "index.ts",
    "services",
    "state",
    "types",
    "ui"
  ],
  "exclude": ["**/*.spec.ts"]
}
